<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.edu.ctu.cit.qlchitieu">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_qlct"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_qlct_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.TestActivity">

        </activity>
        <activity
            android:name=".activity.StatisticActivity"
            android:label="@string/statistic" />
        <activity
            android:name=".activity.TransactionActivity"
            android:label="@string/transaction" />
        <activity
            android:name=".activity.SplashActivity"
            android:noHistory="true"
            android:theme="@style/AppThemeSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.RegisterActivity"
            android:label="@string/reg_account" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_full_name" />
    </application>

</manifest>
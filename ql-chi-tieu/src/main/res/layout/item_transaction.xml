<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?android:selectableItemBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lbl_trans_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="@string/app_full_name"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toLeftOf="@id/lbl_trans_amount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lbl_trans_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toLeftOf="@id/lbl_trans_amount"
        app:layout_constraintTop_toBottomOf="@id/lbl_trans_name"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lbl_trans_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toLeftOf="@id/lbl_trans_amount"
        app:layout_constraintTop_toBottomOf="@id/lbl_trans_desc"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lbl_trans_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="500.000"
        android:gravity="end"
        style="@style/TextAppearance.AppCompat.Headline"/>

</androidx.constraintlayout.widget.ConstraintLayout>